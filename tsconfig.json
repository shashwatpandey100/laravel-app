{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        },
        "skipLibCheck": true
    },
    "include": ["resources/js/**/*.js", "resources/js/**/*.jsx", "resources/js/**/*.d.ts"]
}
